{
    "templates": [
        {
            "id": "fln-basic",
            "name": "FLN Improvement Program",
            "description": "Foundational Literacy and Numeracy program aligned with NIPUN Bharat guidelines",
            "theme": "FLN",
            "difficulty": "beginner",
            "duration": "12 months",
            "target_beneficiaries": "Grade 1-3 students",
            "problem_statement": {
                "challenge_text": "Students in government schools are not achieving grade-level proficiency in reading and basic math by Grade 3",
                "root_causes": [
                    "Lack of structured foundational learning approach",
                    "Teachers not trained in FLN pedagogy",
                    "No regular assessment of learning levels",
                    "Limited learning materials for early grades"
                ],
                "theme": "FLN"
            },
            "stakeholders": [
                {
                    "name": "School Teachers",
                    "role": "Primary implementers",
                    "priority": "high"
                },
                {
                    "name": "Block Education Officers",
                    "role": "Supervision and support",
                    "priority": "high"
                },
                {
                    "name": "Parents",
                    "role": "Home learning support",
                    "priority": "medium"
                },
                {
                    "name": "Anganwadi Workers",
                    "role": "Pre-school readiness",
                    "priority": "medium"
                }
            ],
            "outcomes": [
                {
                    "description": "Improved oral reading fluency among Grade 1-3 students",
                    "indicators": [
                        {
                            "type": "outcome",
                            "description": "% of Grade 3 students reading at 60+ WPM",
                            "target_value": "70%"
                        },
                        {
                            "type": "output",
                            "description": "Number of reading camps conducted",
                            "target_value": "100"
                        }
                    ]
                },
                {
                    "description": "Enhanced numeracy skills among early grade students",
                    "indicators": [
                        {
                            "type": "outcome",
                            "description": "% of students demonstrating grade-level numeracy",
                            "target_value": "65%"
                        },
                        {
                            "type": "output",
                            "description": "Number of teachers trained in math pedagogy",
                            "target_value": "200"
                        }
                    ]
                }
            ],
            "activities": [
                {
                    "title": "Teacher Training on FLN Pedagogy",
                    "duration": "1 month"
                },
                {
                    "title": "Learning Material Development",
                    "duration": "2 months"
                },
                {
                    "title": "Reading Camps Implementation",
                    "duration": "6 months"
                },
                {
                    "title": "Parent Engagement Sessions",
                    "duration": "ongoing"
                }
            ]
        },
